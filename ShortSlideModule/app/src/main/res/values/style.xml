<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--选中的样式，可以设置选择的字体颜色，这里只是为了改变选择时的字体大小-->
    <style name="bottom_tab_title_active">
        <item name="android:textSize">15sp</item>
        <item name="colorPrimary">@color/purple_200</item>
    </style>

    <!--没有选中的样式，导航默认的字体大小就是12sp-->
    <style name="bottom_tab_title_inactive">
        <item name="android:textSize">14sp</item>
        <item name="iconSize">1dp</item>
    </style>
    <!-- 底部导航栏按钮theme. -->
    <style name="footButton" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

    <style name="RoundedImageViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--overflow按钮，弹出的菜单样式-->
    <style name="ToolbarPopupTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:colorBackground">#11EEFF</item>
        <item name="actionOverflowMenuStyle">@style/OverFlowMenuStyle</item>

    </style>
    <!--overflow按钮，弹出的菜单样式-->
    <style name="OverFlowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>
    <!--通用主页尝试定义主题-->
    <style name="fhy_action" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/yellow_100</item>
        <item name="colorAccent">@color/red_600</item>
    </style>

</resources>
